<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/defPadding"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginStart="@dimen/landMargin"
        android:layout_marginEnd="@dimen/landMargin"
        android:layout_marginTop="@dimen/landMargin"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/landHeight"/>

    <Button
        android:layout_margin="@dimen/defMargin"
        android:padding="@dimen/defPadding"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:text="@string/click"
        android:id="@+id/button"
        android:layout_below="@id/imageView"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="@dimen/defMargin"
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:text="@string/about"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>